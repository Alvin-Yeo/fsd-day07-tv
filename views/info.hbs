<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                <div id="info-div" class="d-flex">
                    <div class="d-flex flex-column">
                        <div><p><span class="font-weight-bold">Name:</span> {{ info.name }}</p></div>    
                        <div><p><span class="font-weight-bold">Rating:</span> {{ info.rating }}</p></div>    
                        <div>{{{ info.summary }}}</div>    
                    </div>
                    <div class="ml-5">
                        <img src="{{ info.image }}" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col d-flex justify-content-between">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="{{ info.official_site }}" target="_blank" class="btn btn-primary">Go to official site</a>
            </div>
        </div>
    </div>
</main>